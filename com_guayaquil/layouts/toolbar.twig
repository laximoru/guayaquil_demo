<div class="language-panel">
    <div>
        <div class="header-logo">
            <a href="{{ createUrl() }}"><span class="letter">G</span><span
                        class="text">uayaquil</span> <span class="copyright">Â©</span></a>
        </div>
        <select class="select" name="language" id="language" autocomplete="off">
            {% for label, code in languages %}
                <option value="{{ code }}" {{ code == current ? 'selected="selected"' : '' }}>{{ label }}</option>
            {% endfor %}
        </select>
    </div>
    <script type="text/javascript">
        jQuery(document).ready(function () {
            var cLang = '{{ current }}';
            jQuery('#language option[value="' + cLang + '"]').attr('selected', 'true');
        });
    </script>
    {% if user.isLoggedIn %}
        <div>
            <form action="{{ createUrl('login', 'logout') }}" method="post">
                <input type="hidden" name="user[backurl]" value="">
                <span class="username">
                    Username:<span style="color: #90acce;">{{ user.userName }}</span>
                    Access:
                        {% for service in user.services %}
                            {% if service == 'am' %}
                                <a href="{{ createUrl('aftermarket') }}"><span style="color: #90acce;">Aftermarket</span></a>
                            {% elseif service == 'oem' %}
                                <a href="{{ createUrl('catalogs') }}"><span style="color: #90acce;">OEM</span></a>
                            {% endif %}
                        {% endfor %}
                        </span>
                <button type="submit" class="logout-button"><?xml version="1.0" encoding="iso-8859-1"?>
